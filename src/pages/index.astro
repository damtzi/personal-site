---
import Link from '~/components/shared/link.astro';
import BaseLayout from '~/layouts/base-layout.astro';
---

<BaseLayout title="damitzi">
    <div class="flex flex-col gap-4 stagger-animation">
        <h1 class="text-4xl font-playfair">Hello there</h1>
        <p>
            I work as a web developer at <Link
                url="https://secretarium.com/"
                title="Secretarium"
            />. I specialise in building and maintaining user interfaces for
            websites and web applications. In my spare time I'm watching the
            NBA, listening to <Link url="/music" title="music" internal />, and
            baking <Link url="/bread" title="bread" internal />.
        </p>
    </div>
</BaseLayout>
